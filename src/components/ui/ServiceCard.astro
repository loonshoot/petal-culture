---
export interface Props {
  title: string;
  description: string;
  features: string[];
  href: string;
  icon: 'wedding' | 'ceremony' | 'reception';
}

const { title, description, features, href, icon } = Astro.props;
---

<div class="group bg-white border border-stone-200 rounded-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
  <div class="text-petal-forest mb-4">
    {icon === 'wedding' && (
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
      </svg>
    )}
    {icon === 'ceremony' && (
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v18m9-9H3m17.657-9.657L4.343 19.657m0-17.314L19.657 19.657" />
      </svg>
    )}
    {icon === 'reception' && (
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    )}
  </div>

  <h3 class="font-display text-2xl text-stone-800 mb-3">
    {title}
  </h3>

  <p class="font-body text-stone-600 mb-4">
    {description}
  </p>

  <ul class="space-y-2 mb-6">
    {features.map((feature) => (
      <li class="flex items-center text-sm font-body text-stone-500">
        <svg class="w-4 h-4 text-petal-eucalyptus mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        {feature}
      </li>
    ))}
  </ul>

  <a
    href={href}
    class="inline-flex items-center text-petal-forest hover:text-green-900 font-body text-sm uppercase tracking-wide group-hover:underline"
  >
    Learn More
    <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </a>
</div>