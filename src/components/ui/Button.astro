---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { href, variant = 'primary', size = 'md', class: className = '' } = Astro.props;

const baseStyles = 'inline-block font-body uppercase tracking-wide transition-all duration-300 rounded-full text-center';

const variants = {
  primary: 'bg-petal-primary text-white border-2 border-petal-primary hover:bg-transparent hover:text-petal-primary',
  secondary: 'bg-petal-terracotta text-white border-2 border-petal-terracotta hover:bg-transparent hover:text-petal-terracotta',
  outline: 'bg-transparent border-2 border-petal-primary text-petal-primary hover:bg-petal-primary hover:text-white'
};

const sizes = {
  sm: 'px-4 py-3 text-xs',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-3 text-base'
};
---

<a
  href={href}
  class={`${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`}
>
  <slot />
</a>