---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/weddings', label: 'Wedding Florals' },
  { href: '/events', label: 'Event Styling' },
  { href: '/gallery', label: 'Portfolio' },
  { href: '/process', label: 'Our Process' }
];

const services = [
  { href: '/weddings#bouquets', label: 'Bridal Bouquets' },
  { href: '/weddings#ceremony', label: 'Ceremony Florals' },
  { href: '/weddings#reception', label: 'Reception Styling' },
  { href: '/events', label: 'Corporate Events' }
];
