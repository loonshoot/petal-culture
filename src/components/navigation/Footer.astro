        </div>
      </div>

      <!-- Quick Links -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-stone-600 hover:text-petal-rose transition-colors text-sm font-body">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Services</h4>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-stone-600 hover:text-petal-rose transition-colors text-sm font-body">
                {service.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Get in Touch</h4>
        <div class="space-y-2 text-stone-600 text-sm font-body">
          <p>
            <a href="mailto:hello@petalculture.com" class="hover:text-petal-rose transition-colors">
              hello@petalculture.com
            </a>
          </p>
          <p>
            <a href="tel:+61400000000" class="hover:text-petal-rose transition-colors">
              0400 000 000
            </a>
          </p>
          <p>By appointment only</p>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-stone-200 flex flex-col md:flex-row justify-between items-center">
      <p class="text-stone-500 text-xs font-body mb-4 md:mb-0">
        Â© {currentYear} Petal Culture. All rights reserved.
      </p>
      <div class="flex space-x-4">
        <a href="/privacy" class="text-stone-500 hover:text-petal-rose transition-colors text-xs font-body">
          Privacy Policy
        </a>
        <a href="/terms" class="text-stone-500 hover:text-petal-rose transition-colors text-xs font-body">
          Terms & Conditions
        </a>
      </div>
    </div>
  </div>
</footer>