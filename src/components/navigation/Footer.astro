---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/weddings', label: 'Wedding Florals' },
  { href: '/gallery', label: 'Portfolio' },
  { href: '/process', label: 'Our Process' },
  { href: '/about', label: 'About Emily' }
];

const services = [
  { href: '/weddings#bridal', label: 'Bridal Florals' },
  { href: '/weddings#ceremony', label: 'Ceremony Styling' },
  { href: '/weddings#reception', label: 'Reception Design' },
  { href: '/gallery', label: 'Look Book' }
];
---

<footer class="bg-stone-100">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <img
          src="https://petal-culture.syd1.cdn.digitaloceanspaces.com/images/logo/logo_rgb.png"
          alt="Petal Culture"
          class="h-8 w-auto mb-4"
        />
        <p class="text-stone-600 text-sm font-body mb-4">
          Artful florals for life's beautiful moments. Creating bespoke arrangements for weddings and events.
        </p>
        <div class="flex space-x-4">
          <a href="https://www.instagram.com/petal.culture" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram" class="text-stone-500 hover:text-petal-forest transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-stone-600 hover:text-petal-forest transition-colors text-sm font-body">
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a href="https://www.elderberryevents.com.au/" target="_blank" rel="noopener noreferrer" class="text-stone-600 hover:text-petal-forest transition-colors text-sm font-body">
              Elderberry
            </a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Services</h4>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-stone-600 hover:text-petal-forest transition-colors text-sm font-body">
                {service.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="md:col-span-1">
        <h4 class="font-body font-semibold text-stone-700 mb-4 uppercase tracking-wide text-sm">Get in Touch</h4>
        <div class="space-y-2 text-stone-600 text-sm font-body">
          <p>
            <a href="mailto:hello@petalculture.com" class="hover:text-petal-forest transition-colors">
              hello@petalculture.com
            </a>
          </p>
          <p>
            <a href="tel:+61401551777" class="hover:text-petal-forest transition-colors">
              0401 551 777
            </a>
          </p>
          <p>By appointment only</p>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-stone-200 flex flex-col md:flex-row justify-between items-center">
      <p class="text-stone-500 text-xs font-body mb-4 md:mb-0">
        Â© {currentYear} Petal Culture. All rights reserved.
      </p>
      <div class="flex space-x-4">
        <a href="/privacy-policy" class="text-stone-500 hover:text-petal-forest transition-colors text-xs font-body">
          Privacy Policy
        </a>
        <a href="/terms-and-conditions" class="text-stone-500 hover:text-petal-forest transition-colors text-xs font-body">
          Terms & Conditions
        </a>
      </div>
    </div>
  </div>
</footer>