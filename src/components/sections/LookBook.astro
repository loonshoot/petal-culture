---

<section class="py-20 bg-petal-cream">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl md:text-5xl text-petal-charcoal mb-4">
        Our Look Book
      </h2>
      <p class="font-body text-petal-sage max-w-2xl mx-auto">
        Explore our signature wedding styles, each crafted to tell a unique love story
        through the artistry of florals.
      </p>
    </div>

    <!-- Horizontal Scrolling Gallery -->
    <div class="relative">
      <div
        id="lookbook-scroll"
        class="flex gap-6 overflow-x-auto pb-4 scrollbar-hide snap-x snap-mandatory"
        style="scroll-behavior: smooth;"
      >
        {weddings.map((wedding, index) => (
          <div class="flex-none w-80 md:w-96 snap-start group cursor-pointer" data-wedding-id={wedding.id}>
            <!-- Image Container -->
            <div class="relative h-72 md:h-80 bg-gradient-to-br from-petal-stone to-petal-pearl rounded-lg overflow-hidden mb-4 shadow-lg group-hover:shadow-xl transition-all duration-300">
              <!-- Placeholder for image/video -->
              <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-petal-eucalyptus/10 to-petal-terracotta/10">
                <svg class="w-20 h-20 text-petal-sage/30" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
              </div>

              <!-- Overlay with wedding info -->
              <div class="absolute inset-0 bg-gradient-to-t from-petal-charcoal/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
                <div class="text-white">
                  <p class="font-body text-sm uppercase tracking-wide mb-1 text-petal-peach">
                    {wedding.style}
                  </p>
                  <h3 class="font-display text-xl mb-2">
                    {wedding.name}
                  </h3>
                  <p class="font-body text-sm opacity-90 mb-3">
                    {wedding.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {wedding.tags.map(tag => (
                      <span class="px-2 py-1 bg-white/20 rounded-full text-xs font-body">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </div>

              <!-- Play button hint for future videos -->
              <div class="absolute top-4 right-4 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <svg class="w-5 h-5 text-petal-forest ml-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>

            <!-- Wedding Info Below -->
            <div class="px-2">
              <h3 class="font-display text-xl text-petal-charcoal mb-1">
                {wedding.name}
              </h3>
              <p class="font-body text-sm text-petal-sage uppercase tracking-wide">
                {wedding.style}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Arrows -->
      <button
        id="scroll-left"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 w-12 h-12 bg-white shadow-lg rounded-full flex items-center justify-center hover:bg-petal-stone transition-colors"
        aria-label="Scroll left"
      >
        <svg class="w-6 h-6 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button
        id="scroll-right"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 w-12 h-12 bg-white shadow-lg rounded-full flex items-center justify-center hover:bg-petal-stone transition-colors"
        aria-label="Scroll right"
      >
        <svg class="w-6 h-6 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <Button href="/lookbook" variant="primary">
        View Full Look Book
      </Button>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const scrollContainer = document.getElementById('lookbook-scroll');
    const leftBtn = document.getElementById('scroll-left');
    const rightBtn = document.getElementById('scroll-right');

    if (scrollContainer && leftBtn && rightBtn) {
      const cardWidth = 384; // w-96 = 24rem = 384px

      leftBtn.addEventListener('click', () => {
        scrollContainer.scrollBy({ left: -cardWidth, behavior: 'smooth' });
      });

      rightBtn.addEventListener('click', () => {
        scrollContainer.scrollBy({ left: cardWidth, behavior: 'smooth' });
      });

      // Optional: Click on cards to view more details
      const cards = scrollContainer.querySelectorAll('[data-wedding-id]');
      cards.forEach(card => {
        card.addEventListener('click', () => {
          const weddingId = card.getAttribute('data-wedding-id');
          // Future: Navigate to individual wedding gallery
          console.log(`Viewing wedding ${weddingId}`);
        });
      });
    }
  });
</script>