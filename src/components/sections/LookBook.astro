---
import Button from '../ui/Button.astro';
import { lookbookCollections } from '../../data/lookbook.js';
---

<section class="py-20 bg-petal-cream">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl md:text-5xl text-petal-charcoal mb-4">
        Our Look Book
      </h2>
      <p class="font-body text-petal-sage max-w-2xl mx-auto">
        Explore our signature wedding styles, each crafted to tell a unique love story
        through the artistry of florals.
      </p>
    </div>

    <!-- Horizontal Scrolling Gallery -->
    <div class="relative">
      <div
        id="lookbook-scroll"
        class="flex gap-6 overflow-x-auto pb-4 scrollbar-hide snap-x snap-mandatory"
        style="scroll-behavior: smooth;"
      >
        {lookbookCollections.map((collection, index) => (
          <div class="flex-none w-80 md:w-96 snap-start group cursor-pointer" data-collection-id={collection.id}>
            <!-- 3x Mosaic Card -->
            <div class="relative h-72 md:h-80 rounded-lg overflow-hidden mb-4 shadow-lg group-hover:shadow-xl transition-all duration-300">
              <!-- Mosaic Layout: Main image (2/3) + Two stacked images (1/3) -->
              <div class="flex h-full">
                <!-- Main image (left 2/3) -->
                <div class="w-2/3 h-full relative overflow-hidden">
                  <img
                    src={collection.cardImages[0]}
                    alt={`${collection.title} - Main`}
                    class="w-full h-full object-cover"
                  />
                </div>

                <!-- Two stacked images (right 1/3) -->
                <div class="w-1/3 h-full flex flex-col">
                  <div class="h-1/2 relative overflow-hidden border-l border-b border-white/20">
                    <img
                      src={collection.cardImages[1]}
                      alt={`${collection.title} - Top`}
                      class="w-full h-full object-cover"
                    />
                  </div>
                  <div class="h-1/2 relative overflow-hidden border-l border-white/20">
                    <img
                      src={collection.cardImages[2]}
                      alt={`${collection.title} - Bottom`}
                      class="w-full h-full object-cover"
                    />
                  </div>
                </div>
              </div>

              <!-- Overlay with collection info -->
              <div class="absolute inset-0 bg-gradient-to-t from-petal-charcoal/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
                <div class="text-white">
                  <h3 class="font-display text-xl mb-2">
                    {collection.title}
                  </h3>
                  <p class="font-body text-sm opacity-90">
                    {collection.description}
                  </p>
                </div>
              </div>

              <!-- View button hint -->
              <div class="absolute top-4 right-4 w-10 h-10 bg-white/90 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <svg class="w-5 h-5 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </div>
            </div>

            <!-- Collection Info Below -->
            <div class="px-2">
              <h3 class="font-display text-xl text-petal-charcoal mb-1">
                {collection.title}
              </h3>
              <p class="font-body text-sm text-petal-sage">
                {collection.description}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Arrows -->
      <button
        id="scroll-left"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 w-12 h-12 bg-white shadow-lg rounded-full flex items-center justify-center hover:bg-petal-stone transition-colors"
        aria-label="Scroll left"
      >
        <svg class="w-6 h-6 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button
        id="scroll-right"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 w-12 h-12 bg-white shadow-lg rounded-full flex items-center justify-center hover:bg-petal-stone transition-colors"
        aria-label="Scroll right"
      >
        <svg class="w-6 h-6 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12">
      <Button href="/lookbook" variant="primary">
        View Full Look Book
      </Button>
    </div>
  </div>
</section>

<style>
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const scrollContainer = document.getElementById('lookbook-scroll');
    const leftBtn = document.getElementById('scroll-left');
    const rightBtn = document.getElementById('scroll-right');

    if (scrollContainer && leftBtn && rightBtn) {
      const cardWidth = 384; // w-96 = 24rem = 384px

      leftBtn.addEventListener('click', () => {
        scrollContainer.scrollBy({ left: -cardWidth, behavior: 'smooth' });
      });

      rightBtn.addEventListener('click', () => {
        scrollContainer.scrollBy({ left: cardWidth, behavior: 'smooth' });
      });

      // Click on cards to view collection gallery
      const cards = scrollContainer.querySelectorAll('[data-collection-id]');
      cards.forEach(card => {
        card.addEventListener('click', () => {
          const collectionId = card.getAttribute('data-collection-id');
          window.location.href = `/lookbook/${collectionId}`;
        });
      });
    }
  });
</script>