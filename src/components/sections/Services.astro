---
import ServiceCard from '../ui/ServiceCard.astro';

const services = [
  {
    title: 'Bridal Florals',
    description: 'Exquisite bouquets and personal flowers that capture your individual style and love story.',
    features: ['Bridal Bouquets', 'Bridesmaids Bouquets', 'Buttonholes & Corsages'],
    href: '/weddings#bridal',
    icon: 'wedding'
  },
  {
    title: 'Ceremony Styling',
    description: 'Create a breathtaking backdrop for your vows with elegant floral installations.',
    features: ['Altar Arrangements', 'Aisle Styling', 'Arch & Arbor Designs'],
    href: '/weddings#ceremony',
    icon: 'ceremony'
  },
  {
    title: 'Reception Design',
    description: 'Transform your celebration space with sophisticated centerpieces and ambient florals.',
    features: ['Centerpieces', 'Head Table Styling', 'Venue Installations'],
    href: '/weddings#reception',
    icon: 'reception'
  }
];
---

<section class="py-20 bg-stone-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-display text-3xl md:text-5xl text-stone-800 mb-4">
        Our Services
      </h2>
      <p class="font-body text-stone-600 max-w-2xl mx-auto">
        Whether you're planning an intimate wedding or a grand corporate event,
        we bring your floral vision to life with passion and precision.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service) => (
        <ServiceCard {...service} />
      ))}
    </div>
  </div>
</section>