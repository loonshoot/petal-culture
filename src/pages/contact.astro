---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/forms/ContactForm.astro';
---

<Layout title="Contact">
  <section class="py-24 bg-gradient-to-br from-petal-cream via-white to-petal-pearl">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="font-display text-4xl md:text-6xl text-stone-800 mb-6 text-center">
          Let's Connect
        </h1>
        <p class="font-body text-lg text-stone-600 text-center mb-12">
          We'd love to hear about your upcoming celebration and how we can bring
          your floral vision to life.
        </p>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="font-display text-2xl text-stone-800 mb-6">
              Start Your Journey
            </h2>

            <ContactForm />
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <div class="bg-white rounded-lg shadow-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Get In Touch
              </h3>
              <div class="space-y-4 font-body text-stone-600">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Email</p>
                    <a href="mailto:hello@petalculture.com.au" class="hover:text-petal-forest transition-colors">
                      hello@petalculture.com.au
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Phone</p>
                    <a href="tel:+61401551777" class="hover:text-petal-forest transition-colors">
                      0401 551 777
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Studio</p>
                    <p>By appointment only</p>
                    <p class="text-sm mt-1">Servicing all areas</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-petal-peach rounded-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Office Hours
              </h3>
              <div class="space-y-2 font-body text-stone-600">
                <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
                <p>Saturday: 10:00 AM - 2:00 PM</p>
                <p>Sunday: By appointment</p>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Follow Our Journey
              </h3>
              <div>
                <a href="https://www.instagram.com/petal.culture" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram" class="text-stone-500 hover:text-petal-forest transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zM5.838 12a6.162 6.162 0 1 1 12.324 0 6.162 6.162 0 0 1-12.324 0zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm4.965-10.405a1.44 1.44 0 1 1 2.881.001 1.44 1.44 0 0 1-2.881-.001z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>