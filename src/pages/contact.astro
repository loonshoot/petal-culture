---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="Contact">
  <section class="py-24 bg-gradient-to-br from-petal-cream via-white to-petal-pearl">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="font-display text-4xl md:text-6xl text-stone-800 mb-6 text-center">
          Let's Connect
        </h1>
        <p class="font-body text-lg text-stone-600 text-center mb-12">
          We'd love to hear about your upcoming celebration and how we can bring
          your floral vision to life.
        </p>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="font-display text-2xl text-stone-800 mb-6">
              Start Your Journey
            </h2>

            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block font-body text-sm text-stone-700 mb-2">
                    First Name *
                  </label>
                  <input
                    type="text"
                    required
                    class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                  />
                </div>
                <div>
                  <label class="block font-body text-sm text-stone-700 mb-2">
                    Last Name *
                  </label>
                  <input
                    type="text"
                    required
                    class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                  />
                </div>
              </div>

              <div>
                <label class="block font-body text-sm text-stone-700 mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  required
                  class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                />
              </div>

              <div>
                <label class="block font-body text-sm text-stone-700 mb-2">
                  Phone
                </label>
                <input
                  type="tel"
                  class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                />
              </div>

              <div>
                <label class="block font-body text-sm text-stone-700 mb-2">
                  Event Type *
                </label>
                <select
                  required
                  class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                >
                  <option value="">Select an option</option>
                  <option value="wedding">Wedding</option>
                  <option value="corporate">Corporate Event</option>
                  <option value="birthday">Birthday</option>
                  <option value="anniversary">Anniversary</option>
                  <option value="other">Other Celebration</option>
                </select>
              </div>

              <div>
                <label class="block font-body text-sm text-stone-700 mb-2">
                  Event Date
                </label>
                <input
                  type="date"
                  class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                />
              </div>

              <div>
                <label class="block font-body text-sm text-stone-700 mb-2">
                  Tell Us About Your Vision
                </label>
                <textarea
                  rows="4"
                  class="w-full px-4 py-2 border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-petal-forest/50"
                  placeholder="Share your ideas, color preferences, style inspiration..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-petal-forest text-white font-body uppercase tracking-wide py-3 px-6 rounded-full hover:bg-green-900 transition-colors"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <div class="bg-white rounded-lg shadow-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Get In Touch
              </h3>
              <div class="space-y-4 font-body text-stone-600">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Email</p>
                    <a href="mailto:hello@petalculture.com" class="hover:text-petal-forest transition-colors">
                      hello@petalculture.com
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Phone</p>
                    <a href="tel:+61401551777" class="hover:text-petal-forest transition-colors">
                      0401 551 777
                    </a>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-5 h-5 text-petal-forest mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <p class="font-semibold">Studio</p>
                    <p>By appointment only</p>
                    <p class="text-sm mt-1">Servicing all areas</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="bg-petal-peach rounded-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Office Hours
              </h3>
              <div class="space-y-2 font-body text-stone-600">
                <p>Monday - Friday: 9:00 AM - 5:00 PM</p>
                <p>Saturday: 10:00 AM - 2:00 PM</p>
                <p>Sunday: By appointment</p>
              </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-8">
              <h3 class="font-display text-xl text-stone-800 mb-4">
                Follow Our Journey
              </h3>
              <div class="flex space-x-4">
                <a href="#" aria-label="Instagram" class="text-stone-500 hover:text-petal-forest transition-colors">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
