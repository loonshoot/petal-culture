---
import Layout from '../layouts/Layout.astro';
import CTALookbook from '../components/sections/CTALookbook.astro';
import { lookbookCollections } from '../data/lookbook.js';
---

<Layout title="Look Book">
  <!-- Hero Section -->
  <section class="relative py-24 bg-gradient-to-br from-petal-cream via-white to-petal-pearl">
    <div class="container mx-auto px-4 text-center">
      <h1 class="font-display text-4xl md:text-6xl text-petal-charcoal mb-6">
        Look Book
      </h1>
      <p class="font-body text-xl text-stone-600 max-w-3xl mx-auto leading-relaxed">
        Explore our signature wedding styles through these carefully curated collections. Each gallery showcases the artistry and attention to detail that makes every celebration uniquely beautiful.
      </p>
    </div>
  </section>

  <!-- Collections Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        {lookbookCollections.map((collection) => (
          <div class="group cursor-pointer" onclick={`window.location.href='/lookbook/${collection.id}'`}>
            <!-- 3x Mosaic Card (Larger) -->
            <div class="relative h-96 md:h-[450px] rounded-lg overflow-hidden shadow-lg group-hover:shadow-2xl transition-all duration-500">
              <!-- Mosaic Layout: Main image (2/3) + Two stacked images (1/3) -->
              <div class="flex h-full">
                <!-- Main image (left 2/3) -->
                <div class="w-2/3 h-full relative overflow-hidden">
                  <img
                    src={collection.cardImages[0]}
                    alt={`${collection.title} - Main`}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </div>

                <!-- Two stacked images (right 1/3) -->
                <div class="w-1/3 h-full flex flex-col">
                  <div class="h-1/2 relative overflow-hidden border-l-2 border-b border-white/30">
                    <img
                      src={collection.cardImages[1]}
                      alt={`${collection.title} - Top`}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                  </div>
                  <div class="h-1/2 relative overflow-hidden border-l-2 border-white/30">
                    <img
                      src={collection.cardImages[2]}
                      alt={`${collection.title} - Bottom`}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                  </div>
                </div>
              </div>

              <!-- Overlay with collection info -->
              <div class="absolute inset-0 bg-gradient-to-t from-petal-charcoal/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-8">
                <div class="text-white">
                  <h3 class="font-display text-2xl md:text-3xl mb-3">
                    {collection.title}
                  </h3>
                  <p class="font-body text-base opacity-90 mb-4">
                    {collection.description}
                  </p>
                  <div class="flex items-center gap-2 text-petal-peach">
                    <span class="font-body text-sm">View Collection</span>
                    <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>

              <!-- View button hint -->
              <div class="absolute top-6 right-6 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300 shadow-lg">
                <svg class="w-6 h-6 text-petal-forest" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </div>
            </div>

            <!-- Collection Info Below -->
            <div class="pt-6">
              <h3 class="font-display text-2xl text-petal-charcoal mb-2">
                {collection.title}
              </h3>
              <p class="font-body text-stone-600 leading-relaxed">
                {collection.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTALookbook />
</Layout>